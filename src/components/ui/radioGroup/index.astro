---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"fieldset"> {
  label?: string;
}

const { label, ...attrs } = Astro.props;
---

<fieldset {...attrs} class="flex flex-col gap-1">
  {label && <legend class="mb-1 font-semibold">{label}</legend>}
  <slot />
</fieldset>

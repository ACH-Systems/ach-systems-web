{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "~assets/*": ["src/assets/*"],
      "~components": ["src/components/index.ts"],
      "~components/*": ["src/components/*"],
      "~types": ["src/types/index.ts"]
    }
  }
}
